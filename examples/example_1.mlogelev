fn main() {
	let myUnit;
	myUnit = radar("ally", "any", "any", "distance", @this, 1);
	ubind(myUnit);
	let i;
	i = 0;
	while true {
		let desiredX;
		let desiredY;
		if i == 0 {
			desiredX = @thisx;
			desiredY = @thisy + 5;
		}
		else {
			desiredX = @thisx - 10;
			desiredY = @thisy;
		}
		ucontrolMove(desiredX, desiredY);
		let didArrive;
		didArrive = 0
		while didArrive == 0 {
			didArrive = ucontrolWithin(desiredX, desiredY, 1);
		}
		i = i + 1
		if i == 2 {
			i = 0;
		}
	}
}
